{
    "builds": [
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build"
        },
        {
            "src": "/pavel_sites/wsgi.py",
            "use": "@vercel/python",
            "config": { 
                "maxLambdaSize": "15mb" 
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "pavel_sites/wsgi.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        }
    ]
  }